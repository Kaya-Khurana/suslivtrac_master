<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.suslivtrac.ResultController">
    <children>
        <VBox spacing="15" alignment="CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <Label text="Your Carbon Footprint Summary"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: darkgreen;" />

            <Label fx:id="householdLabel" text="Household: 0.00 tonnes CO₂e"
                   style="-fx-font-size: 16px;" />
            <Label fx:id="carLabel" text="Car: 0.00 tonnes CO₂e"
                   style="-fx-font-size: 16px;" />
            <Label fx:id="flightLabel" text="Flight: 0.00 tonnes CO₂e"
                   style="-fx-font-size: 16px;" />

            <Separator />

            <Label fx:id="totalLabel" text="Total: 0.00 tonnes CO₂e"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <Button fx:id="recommendationButton" text="Get Recommendations"
                    style="-fx-font-size: 14px; -fx-font-weight: bold;" onAction="#onRecommendationButtonClick" />

            <TextArea fx:id="recommendationTextArea" wrapText="true" editable="false"
                      visible="false" style="-fx-font-size: 14px; -fx-text-fill: blue; -fx-font-weight: bold;" />
        </VBox>
    </children>
</AnchorPane>
